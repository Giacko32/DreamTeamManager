<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <!-- RecyclerView sopra la BottomAppBar -->

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- BottomAppBar con tre bottoni -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/barrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:backgroundTint="@color/arancione"
            app:fabCradleMargin="16dp"
            app:fabCradleRoundedCornerRadius="16dp"
            app:fabCradleVerticalOffset="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Contenitore per i bottoni -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="4dp">

                <!-- Primo pulsante: Le mie Leghe -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_my_leagues"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Le mie\nLeghe"
                    android:textColor="@color/white" />

                <!-- Secondo pulsante: Crea Nuova Lega -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_create_league"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Crea Nuova\nLega"
                    android:textColor="@color/white" />

                <!-- Terzo pulsante: Iscriviti alla Lega -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_join_league"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Iscriviti alla\nLega"
                    android:textColor="@color/white" />

            </LinearLayout>
        </com.google.android.material.bottomappbar.BottomAppBar>
        <!-- Barriera orizzontale -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:constraint_referenced_ids="bottom_app_bar" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.constraintlayout.widget.ConstraintLayout>